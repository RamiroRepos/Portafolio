const experiences = [
  {
    title: "Full-stack Developer",
    company: "Freelance",
    location: "San José, Costa Rica",
    period: "Julio 2023 - Presente",
    responsibilities: [
      "Desarrollo de aplicaciones web personalizadas con PHP, Angular, SQL, NoSQL, MongoDB y SQL Server",
      "Diseño de interfaz de usuario adaptable con SCSS y prácticas web modernas",
      "Integración y desarrollo de API para soluciones a medida",
      "Optimización de bases de datos para mejorar el rendimiento y la escalabilidad",
      "Colaboración con clientes para ofrecer soluciones técnicas alineadas con el negocio",
    ],
  },
  {
    title: "Information Technology Administrator",
    company: "IMESA Sistemas S.A",
    location: "San José, Costa Rica",
    period: "Febrero 2022 - Presente",
    responsibilities: [
      "Administración de dominios, gestión de cuentas de usuario y creación de políticas de grupo",
      "Administración de hosting en cPanel y filtrado de correo electrónico",
      "Mantenimiento preventivo/correctivo y administración de red local",
      "Asistencia a la gerencia con los requisitos de TI",
    ],
  },
  {
    title: "Technical Support - HelpDesk",
    company: "IMESA Sistemas S.A",
    location: "San José, Costa Rica",
    period: "Febrero 2022 - Enero 2025",
    responsibilities: [
      "Soporte remoto y en sitio para sistemas de punto de venta",
      "Instalación y mantenimiento de equipos TPV y cableado estructurado",
      "Gestión de bases de datos y resolución de problemas de equipos",
      "Experiencia amplia en NP6",
    ],
  },
  {
    title: "Technical Support - HelpDesk",
    company: "IMESA Sistemas S.A",
    location: "San José, Costa Rica",
    period: "Octubre 2018 - Octubre 2021",
    responsibilities: [
      "Soporte remoto e in situ para sistemas de punto de venta",
      "Instalación y mantenimiento de equipos TPV y cableado estructurado",
