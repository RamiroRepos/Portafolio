  },
];

const certifications = [
  "CCNAv7: Introduction to Networks - CISCO Networking Academy",
  "CCNAv7: Switching, Routing, and Wireless Essentials - CISCO Networking Academy",
  "IT Essentials: PC Hardware and Software - Fundación Omar Dengo",
  "Introduction to IoT - CISCO Networking Academy",
  "Get Connected - CISCO Networking Academy",
  "TRIPLE PLAY course - ICE: Centro de Aprendizaje y Desarrollo Empresarial",
  "Basic Course Libreoffice Impress - Universidad Técnica Nacional",
];

const languages = [
  {
    language: "Español",
    level: "Nativo",
    proficiency: 100,
  },
  {
    language: "Inglés",
    level: "B1 - Intermedio",
    proficiency: 60,
    note: "Actualmente estudiando para avanzar",
  },
];
---

<section id="education" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-4 text-gray-900">Educación</h2>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
      Formación académica, certificaciones profesionales y competencias
      lingüísticas
    </p>

    <div class="max-w-5xl mx-auto mb-16">
      <h3 class="text-2xl font-bold mb-8 text-gray-900">Formación Académica</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          education.map((edu) => (
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg p-6 hover:shadow-xl transition">
              <div class="flex justify-center mb-4">
                <svg
                  class="w-16 h-16 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d={edu.icon}
                  />
                </svg>
              </div>
              <h4 class="text-lg font-bold text-gray-900 mb-2 text-center">
                {edu.degree}
              </h4>
              <p class="text-blue-600 font-semibold text-center mb-2">
                {edu.institution}
              </p>
              <p class="text-gray-600 text-center text-sm">{edu.period}</p>
            </div>
          ))
        }
      </div>
    </div>

    <div class="max-w-5xl mx-auto mb-16">
      <h3 class="text-2xl font-bold mb-8 text-gray-900">
        Certificaciones y Cursos
      </h3>
      <div class="bg-gray-50 rounded-lg p-8">
        <ul class="space-y-3">
          {
            certifications.map((cert) => (
              <li class="flex items-start">
                <svg
                  class="w-6 h-6 text-green-600 mr-3 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="text-gray-700">{cert}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div class="max-w-5xl mx-auto">
      <h3 class="text-2xl font-bold mb-8 text-gray-900">Idiomas</h3>
      <div class="grid md:grid-cols-2 gap-6">
        {
          languages.map((lang) => (
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex justify-between items-center mb-3">
                <h4 class="text-xl font-bold text-gray-900">{lang.language}</h4>
                <span class="text-blue-600 font-semibold">{lang.level}</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 mb-2">
                <div
                  class="bg-blue-600 h-3 rounded-full transition-all duration-500"
                  style={`width: ${lang.proficiency}%`}
                />
              </div>
              {lang.note && (
                <p class="text-sm text-gray-600 italic mt-2">{lang.note}</p>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
