<section id="skills" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-4 text-gray-900">
      Habilidades
    </h2>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
      Conocimientos técnicos y habilidades profesionales desarrolladas a lo
      largo de mi carrera
    </p>

    <div class="max-w-6xl mx-auto mb-16">
      <h3 class="text-2xl font-bold mb-8 text-gray-900 text-center">
        Habilidades Técnicas
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          technicalSkills.map((category) => (
            <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-xl transition">
              <h4 class="text-lg font-bold text-blue-600 mb-4">
                {category.category}
              </h4>
              <div class="flex flex-wrap gap-2">
                {category.skills.map((skill) => (
                  <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-sm font-medium">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="max-w-6xl mx-auto">
      <h3 class="text-2xl font-bold mb-8 text-gray-900 text-center">
        Habilidades Blandas
      </h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          softSkills.map((skill) => (
            <div class="bg-white rounded-lg p-6 shadow-md hover:shadow-xl transition text-center">
              <div class="flex justify-center mb-4">
                <svg
                  class="w-12 h-12 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d={skill.icon}
                  />
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-900">{skill.title}</h4>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
