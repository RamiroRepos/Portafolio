---

<section id="experience" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-4 text-gray-900">
      Experiencia Profesional
    </h2>
    <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
      Casi 8 años de experiencia trabajando con tecnología y sistemas de punto
      de venta
    </p>

    <div class="max-w-4xl mx-auto">
      {
        experiences.map((exp, index) => (
          <div class="mb-12 relative pl-8 border-l-2 border-blue-200 hover:border-blue-400 transition">
            <div class="absolute -left-2 top-0 w-4 h-4 bg-blue-600 rounded-full" />

            <div class="bg-gray-50 rounded-lg p-6 hover:shadow-lg transition">
              <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
                <div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-1">
                    {exp.title}
                  </h3>
                  <p class="text-lg text-blue-600 font-semibold">
                    {exp.company}
                  </p>
                  <p class="text-gray-600">{exp.location}</p>
                </div>
                <span class="text-gray-500 font-medium mt-2 md:mt-0">
                  {exp.period}
                </span>
              </div>

              <ul class="space-y-2">
                {exp.responsibilities.map((resp) => (
                  <li class="flex items-start">
                    <svg
                      class="w-5 h-5 text-blue-600 mr-2 mt-0.5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-gray-700">{resp}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
